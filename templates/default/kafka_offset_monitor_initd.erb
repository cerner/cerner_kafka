USER="<%= node['kafka']['user']%>"
JAR_FILE="<%= @jar_file %>"
MAIN_CLASS="<%= node['kafka']['offset_monitor']['main_class'] %>"
LOG_FILE="<%= node['kafka']['log_dir'] %>/kafka-offset-monitor.log"
OPTIONS="<%= node['kafka']['offset_monitor']['options'].map{|k,v| "#{k} #{v}"}.join(" ") %>"
START_CMD="nohup java -cp $JAR_FILE $MAIN_CLASS $OPTIONS >> $LOG_FILE 2>&1 &"

start() {
  findPid
